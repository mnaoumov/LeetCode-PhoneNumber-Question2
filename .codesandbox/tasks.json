{
    "$schema": "https://codesandbox.io/schemas/tasks.json",
    "setupTasks": ["yarn install", "yarn build"],
    "tasks": {
        "install-dependencies": {
            "name": "Install Dependencies",
            "command": "yarn install"
        },
        "start-app": {
            "name": "Run Dev Server",
            "command": "yarn start",
            "runAtStart": true
        },
        "test": {
            "name": "Run tests",
            "command": "yarn test",
            "runAtStart": true
        }
    }
}
